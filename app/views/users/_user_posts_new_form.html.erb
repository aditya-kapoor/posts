<!-- Form post start -->
<%= form_with(model: @post, local: true) do |f| %>
<!-- Form post end -->

  <!-- Label and input for published_at start -->
  <div class="form-group">
    <%= f.label :published_at %>
    <!-- Input for published_at start -->
    <%= f.datetime_select :published_at, class: "form-control" %>
    <!-- Input for published_at end -->
  </div>
  <!-- Label and input for published_at end -->

  <!-- Label and input for user_id start -->
  <!-- Input for user_id start -->
  <%= f.hidden_field :user_id, value: @user.id %>
  <!-- Input for user_id end -->
  <!-- Label and input for user_id end -->

  <!-- Label and input for title start -->
  <div class="form-group">
    <%= f.label :title %>

    <!-- Input for title start -->
    <%= f.text_field :title, class: "form-control" %>
    <!-- Input for title end -->
  </div>
  <!-- Label and input for title end -->

  <!-- Label and input for html start -->
  <div class="form-group">
    <%= f.label :html %>
    <!-- Input for html start -->
    <%= f.text_area :html, rows: "3", class: "form-control" %>
    <!-- Input for html end -->
  </div>
  <!-- Label and input for html end -->

  <!-- Label and input for status start -->
  <div class="form-group">
    <%= f.label :status %>

    <!-- Input for status start -->
    <%= f.text_field :status, class: "form-control" %>
    <!-- Input for status end -->
  </div>
  <!-- Label and input for status end -->

  <%= f.submit "Create post", class: "btn btn-block btn-outline-secondary" %>
<% end %>
