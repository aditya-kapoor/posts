<div class="card mb-3">
  <h2 class="card-header h4">
    Post Tag #<%= post_tag.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Post</dt>
      <dd>
        <% if @post_tag.post.present? %>
          <%= link_to post_tag.post, post_tag.post %>
        <% end %>
      </dd>

      <dt>Tag</dt>
      <dd>
        <% if @post_tag.tag.present? %>
          <%= link_to post_tag.tag, post_tag.tag %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back post_tag, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_post_tag_url(post_tag), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to post_tag, method: :delete, data: { confirm: "Do you really want to delete this post_tag?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(post_tag.updated_at) %> ago
  </div>
</div>
