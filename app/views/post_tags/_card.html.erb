<div class="card mb-3">
  <h2 class="card-header h4">
    Post Tag #<%= post_tag.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Post</dt>
      <!-- Display post_id start -->
      <dd><%= post_tag.post_id %></dd>
      <!-- Display post_id end -->

      <dt>Tag</dt>
      <!-- Display tag_id start -->
      <dd><%= post_tag.tag_id %></dd>
      <!-- Display tag_id end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back post_tag, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link post_tag start -->
      <div class="col">
        <%= link_to edit_post_tag_url(post_tag), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link post_tag end -->

      <!-- Delete link post_tag start -->
      <div class="col">
        <%= link_to post_tag, method: :delete, data: { confirm: "Do you really want to delete this post_tag?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link post_tag end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(post_tag.updated_at) %> ago
  </div>
</div>
