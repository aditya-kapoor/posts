<% was_validated = post_tag.errors.any? %>

<%= form_with(model: post_tag, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for post_id start -->
  <div class="form-group">
    <% post_class = "form-control" %>
    <% post_was_invalid = post_tag.errors.include?(:post) %>

    <% if was_validated %>
      <% if post_was_invalid %>
        <% post_class << " is-invalid" %>
      <% else %>
        <% post_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :post_id %>
    <!-- Input for post_id start -->
    <%= f.number_field :post_id, class: post_class, placeholder: "Enter post" %>
    <!-- Input for post_id end -->
    <% if post_was_invalid %>
      <% post_tag.errors.full_messages_for(:post).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for post_id end -->
  <!-- Label and input for tag_id start -->
  <div class="form-group">
    <% tag_class = "form-control" %>
    <% tag_was_invalid = post_tag.errors.include?(:tag) %>

    <% if was_validated %>
      <% if tag_was_invalid %>
        <% tag_class << " is-invalid" %>
      <% else %>
        <% tag_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :tag_id %>
    <!-- Input for tag_id start -->
    <%= f.number_field :tag_id, class: tag_class, placeholder: "Enter tag" %>
    <!-- Input for tag_id end -->
    <% if tag_was_invalid %>
      <% post_tag.errors.full_messages_for(:tag).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for tag_id end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
