          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='postlteqpublished_atPicker' data-target-input="nearest">
          <%= f.text_field :post_published_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Post Published at less than or equal to", :data => {:target => '#postlteqpublished_atPicker'} %>
          <div class="input-group-append" data-target='#postlteqpublished_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#postgteqpublished_atPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#postlteqpublished_atPicker').datetimepicker({
